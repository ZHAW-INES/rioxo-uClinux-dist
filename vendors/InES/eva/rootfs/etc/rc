hostname uclinux

# Mount filesystems
mount -t proc proc /proc -o noexec,nosuid,nodev
mount -t sysfs sysfs /sys -o noexec,nosuid,nodev
mkdir /var/tmp
mkdir /var/log
mkdir /var/run
mkdir /var/lock

# For debugging: make kernel messages appear at the console
echo 8 > /proc/sys/kernel/printk

# Network setup
ifconfig lo 127.0.0.1
route add -net 127.0.0.0 netmask 255.0.0.0 lo
modprobe hdoip_ether
ifconfig eth0 192.168.1.200 netmask 255.255.255.0 up
# ethtool -s eth0 msglvl 0xffff
# dhcpcd -p -a eth0 &

cat /etc/motd
